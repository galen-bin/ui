/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}
.header_img{
    padding: 25rpx 0;
}
.userinfo button{
  opacity: 0.6;
  font-weight: 500;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  opacity:1;
}
.list{
  border-top: solid 1rpx #eee;
  padding: 20rpx;
  color:#666;
}

.list:last-child{
   border-bottom: solid 1rpx #eee;
  padding: 20rpx;
}
.right{
  float: right;
}
.nav .item_icon{
font-size: 40rpx;
transform:scale(-1);
color:#666;
}
.nav .iconfont{
  padding-right: 10px;
}
.right{
  color: #ddd;
}
.msg_right{
position: absolute;
right: 10px;
}
.show_kin{
  color: #ddd;
  float: right;
}
.picker{
  float: left;
  margin-left: 20px;
}
.picker_icon{
  float: left;
}
.userinfo .item_icon{
  font-size: 100rpx;
  color: rgb(158, 158, 158);
  padding: 10px;
  border: 2px rgba(16, 68, 238, 0.363) solid;
  background: #c3c8dd7e;
  border-radius: 100rpx;
}
.userinfo button{
  line-height: 1 !important;
  font-size:40rpx;
  padding: 10rpx 15rpx;
  margin-top: 20rpx;
  
}
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}
.container{
    width: 580rpx;
    height: 620rpx;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    margin: -370rpx 85rpx;
    background-color: #fff;
    border-radius: 36rpx;
}
.author{
  font-size: 30rpx;
  color: rgb(187, 187, 187);
  text-align: center;
  margin-top: 50rpx;
}
